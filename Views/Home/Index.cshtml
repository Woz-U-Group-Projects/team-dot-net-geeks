<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://thriv.virginia.edu/wp-content/uploads/2017/10/stem_cell_derived_neurons-1200x400.jpg" alt="abstract" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    ABSTRACT
                    <br />
                    <a class="btn btn-primary" href="/Store/Abstract">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://assets.rbl.ms/18794851/1200x400.jpg" alt="nature" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    NATURE
                    <br />
                    <a class="btn btn-success" href="/Store/Nature">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://alluringafrica.com/wp-content/uploads/2018/10/Madagascar-1-1200x400.png" alt="animals" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    ANIMALS
                    <br />
                    <a class="btn btn-info" href="/Store/Animals">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
